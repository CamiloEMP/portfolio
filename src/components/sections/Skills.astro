---
import { technologies } from "@constants/technologies"
import type { IStacks } from "@components/Stack.astro"
import Stack from "@components/Stack.astro"
import HomeLayout from "@layouts/HomeLayout.astro"

const stacks: IStacks = {
  main: [],
  worked: [],
  scencials: []
}

Object.entries(technologies).forEach(([_, tech]) => {
  if (tech.category === "main") {
    stacks.main.push(tech)
  }
  if (tech.category === "worked") {
    stacks.worked.push(tech)
  }
  if (tech.category === "scencials") {
    stacks.scencials.push(tech)
  }
})
---

<HomeLayout title="Tecnologias">
  <div
    class="flex gap-8 justify-center md:justify-start max-w-5xl flex-wrap mx-auto"
  >
    <Stack stack={stacks.main}>Uso principalmente</Stack>
    <Stack stack={stacks.worked}>He trabajado con</Stack>
    <Stack stack={stacks.scencials}>Claramente las uso</Stack>
  </div>
</HomeLayout>
