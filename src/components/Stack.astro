---
import type { ITechnology } from "@constants/technologies"

export interface Props {
  stack: ITechnology[]
}

export interface IStacks {
  main: ITechnology[]
  worked: ITechnology[]
  scencials: ITechnology[]
}

const { stack } = Astro.props
---

<section class="w-80 space-y-4">
  <h4 class="font-titillium font-bold text-lg text-primary">
    <slot />
  </h4>
  <div class="grid grid-cols-2 gap-4">
    {
      stack.map((tech) => (
        <div class="flex items-center gap-2">
          <img
            src={tech.img}
            alt={tech.name}
            class={tech.name === "Tailwind" ? "w-10 h-7" : "w-10"}
          />
          <span class="font-semibold font-inter">{tech.name}</span>
        </div>
      ))
    }
  </div>
</section>
